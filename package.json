{
  "name": "products_for_sale",
  "version": "1.0.0",
  "description": "Simple microsservice to make available products. Technologies: Express, Class-Validator, Jest, Winston and MySQL.",
  "main": "server.js",
  "scripts": {
    "build": "tsc --build",
    "start": "ts-node-dev -r tsconfig-paths/register src/server.ts",
    "knex": "./node_modules/.bin/knex --knexfile ./src/database/knexfile.ts",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://lcoutojunior@github.com/lcoutojunior/products_for_sale.git"
  },
  "keywords": [
    "nodejs",
    "postgresql",
    "products",
    "microsservices",
    "typescript",
    "jest"
  ],
  "author": "Luiz Meirelles",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lcoutojunior/products_for_sale/issues"
  },
  "homepage": "https://github.com/lcoutojunior/products_for_sale#readme",
  "dependencies": {
    "body-parser": "^1.19.2",
    "class-validator": "^0.13.2",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "knex": "^1.0.3",
    "mysql": "^2.18.1",
    "uuidv4": "^6.2.12"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.13.0",
    "typescript": "^4.6.2"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "testMatch": [
      "**/tests/**/*.+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
